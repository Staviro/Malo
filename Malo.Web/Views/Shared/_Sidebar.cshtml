                    <div class="sidemenu-item-header operations" onclick="togglesidemenuBody('operations')">
                        <img src="/icons/arrow-thin-chevron-bottom-icon.svg" class="arrow-icon" />
                        <div>Operations</div>
                    </div>
                    <div class="sidemenu-item-body operations">
                        @await Html.PartialAsync("~/Views/Partials/V-1-0-0/Sidebar/_Operations.cshtml")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
