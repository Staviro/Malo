                    </div>
                </a>
                <a class="sidemenu-item" href="/license">
                    <div class="sidemenu-item-header">
                        <img src="/icons/activity.svg" class="activity-icon" />
                        <div>License</div>
                    </div>
                </a>
                <div class="tab-header">
                    <div>Documentation</div>
                </div>
                <div class="sidemenu-item">
                    <div class="sidemenu-item-header frames" onclick="togglesidemenuBody('frames')">
                        <img src="/icons/arrow-thin-chevron-bottom-icon.svg" class="arrow-icon" />
                        <div>Frames</div>
                    </div>
                    <div class="sidemenu-item-body frames">
                        @await Html.PartialAsync("~/Views/Partials/V-1-0-0/Sidebar/_Frames.cshtml")
                    </div>
                </div>
                <div class="sidemenu-item">
                    <div class="sidemenu-item-header effects" onclick="togglesidemenuBody('effects')">
                        <img src="/icons/arrow-thin-chevron-bottom-icon.svg" class="arrow-icon" />
