<div class="app-sidemenu">
    <div class="sidemenu-container">
        <div class="sidemenu-content">
            <div class="sidemenu-header-icons">
                 <img src="/icons/x.svg" alt="close" id="toggleSideMenuIcon" onclick="toggleSidemenu()" />
                <img src="/icons/brightness-low.svg" alt="brightness" id="appMode" onclick="toggleOrSetTheme()" />
                <img src="/icons/chat-text.svg" alt="chat" id="chat" onclick="alert('Coming soon')" />
            </div>
            <div class="sidemenu-items-li">
                <div class="tab-header">
                    <div>Tools</div>
                </div>
                <div class="sidemenu-item">
                    <div class="sidemenu-item-header" onclick="toggleShortcutModal()">
                        <img src="/icons/activity.svg" class="activity-icon" />
                        <div>Shortcuts</div>
                    </div>
                </div>
                <div class="tab-header">
                    <div>Pages</div>
                </div>
                <a class="sidemenu-item" href="/documentation">
