@using Malo.Web.Helpers.Bundles
<!DOCTYPE html>
<html lang="en-ZA" class="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Malo is a Javascript library used to perform animations and transitions on HTML. It requires a basic understanding of HTML and CSS" />
    <meta name="keywords" content="Malo, malo, javascript library, ui library, opensource, lightweight library, js library, js ui library, malo js, malo library, malo ui library"/>
    <meta name="google-site-verification" content="l80CBXW38XaCAlQ0MI4kr43XDWe_mCskG_u4nXa4Prw" />
    <link rel="apple-touch-icon" href="/images/Malo Logo_Blue120x120.png" sizes="120x120" type="image/png"/>
    <link rel="apple-touch-icon" href="/images/Malo Logo_Blue180x180.png" sizes="180x180" type="image/png" />
    <link rel="mask-icon" href="/images/Malo Logo_Blue180x180.png" type="image/png" />
    <link rel="icon" href="/images/Malo Logo_Blue180x180.png" type="image/png" />
    <link rel="stylesheet" href="@AppBundles.GetCSSBundleName()" />
    <title>@ViewData["Title"]</title>
</head>
<body>
    @await Html.PartialAsync("~/Views/Shared/_Header.cshtml")
    <div class="app-container">
        @await Html.PartialAsync("~/Views/Shared/_Sidebar.cshtml")
        <div class="app-body">
            @RenderBody()
        </div>
    </div>
    <div class="sample-modal">
        <div class="sample-modal-content">
            <div class="sample-modal-header">
                <img id="sampleModalClose" src="/icons/x.svg" class="close-icon" alt="close" />
            </div>
            <div class="sample-modal-body">
                <div class="sample-modal-message">
                    <img src="/icons/verified-symbol-icon.svg" atl="check">
                    <div>Completed</div>

                </div>
            </div>
        </div>
    </div>
    @await Html.PartialAsync("~/Views/Shared/_Footer.cshtml")
    @await Html.PartialAsync("~/Views/Shared/_ShortcutModal.cshtml")
    <script src="@AppBundles.GetJSBundleName()"></script>
</body>
</html>
